{
  "name": "centig",
  "version": "1.0.2",
  "description": "Configuration library for your node.js project",
  "main": "lib/config.js",
  "types": "lib/config.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Alexloof/centig.git"
  },
  "engines": {
    "node": ">=6"
  },
  "keywords": [
    "config",
    "node",
    "nodejs",
    "configuration",
    "validation",
    "environment variables",
    "javascript",
    "env",
    "simple",
    "custom"
  ],
  "author": "alexloof",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Alexloof/centig/issues"
  },
  "homepage": "https://github.com/Alexloof/centig#readme",
  "devDependencies": {
    "@types/jest": "^24.0.20",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.4"
  },
  "files": [
    "lib/**/*"
  ]
}
